#include <Servo.h>
Servo servomotor;
const int boton = 2;

int pos = 1;
int valor = 1;

void setup(){
  attachInterrupt(digitalPinToInterrupt(pin),boton,RISING);
  servin.attach(3);
}

void loop(){
  pos = pos + valor;
  if(pos > 180 || pos < 0){
    valor = valor * -1;
    servin.write(pos);
  }
  delay(20);
}

void boton(){
  valor = valor * -1;
}
